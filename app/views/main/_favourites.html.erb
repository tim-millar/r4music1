<h2 class="info">Your favourites</h2>

<% fav_composers = @customer.favourites(:composer, count: 3) %>
<% fav_instruments = @customer.favourites(:instrument, count: 3) %>

<ul>
  <% fav_composers.each do |composer| %>
    <li><%= link_to_composer(composer) %></li>
  <% end %>
  <% fav_instruments.each do |instrument| %>
    <li><%= link_to_composer(instrument) %></li>
  <% end %>
</ul>
