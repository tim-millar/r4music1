<%= form_tag(controller: 'customer', action: 'signup') do %>

    <p>First name: <%= text_field('customer', 'first_name') %></p>
    <p>Last name: <%= text_field('customer', 'last_name') %></p>
    <p>User name: <%= text_field('customer', 'nick') %></p>
    <p>Password: <%= text_field('customer', 'password') %></p>
    <p>Email address: <%= text_field('customer', 'email_address') %></p>

    <p><input type="Submit" value="Sign up"/></p>

<% end %>
