<p>
  Available editions of <%= @work.title %> by
  <%= "#{@work.composer.first_name} #{@work.composer.last_name}" %>
</p>

<table>
  <tr>
    <th>Edition</th>
    <th>Publisher</th>
  </tr>

  <% @work.editions.each do |edition| %>
    <tr>
      <td>
        <%=
          link_to(
            edition.description || '(no descr.)',
            controller: 'edition',
            action: 'show',
            id: edition.id,
          )
        %>
      </td>
      <td><%= edition.publisher %></td>
    </tr>
  <% end %>
</table>
